@{
    ViewData["Title"] = "Flights";
}
@model flight_manager_2021.Models.Flights.FlightsViewModel


<div class="content">
    <div class="content-header">
        <div class="content-header-item">
            From
        </div>
        <div class="content-header-item">
            To
        </div>
        <div class="content-header-item">
            Take off Time
        </div>
        <div class="content-header-item">
            Landing Time
        </div>
        <div class="content-header-item">
            Seats
        </div>
        <div class="content-header-item">
            Reserve
        </div>
    </div>

    @{
        Random rng = new Random();
    }
    @for (int i = 0; i < 20; i++)
    {
        <div class="content-hero-flight">
            <div class="content-hero-flight-item">
                @Html.DisplayFor(model => model.LocationFrom)
            </div>
            <div class="content-hero-flight-item">
                @Html.DisplayFor(model => model.LocationTo)
            </div>
            <div class="content-hero-flight-item">
                @Html.DisplayFor(model => model.Going)
            </div>
            <div class="content-hero-flight-item">
                @Html.DisplayFor(model => model.Return)
            </div>
            <div class="content-hero-flight-item">
                @Html.DisplayFor(model => model.CapacityOfBusinessClass)
            </div>
            <div class="content-hero-flight-item">
                ReserveButtonhere
            </div>
        </div>
    }
</div>
