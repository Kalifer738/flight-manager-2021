@{
    ViewData["Title"] = "Edit";
}
@model FlightManager.Models.Reservations.ReservationsEditViewModel

<div class="jumbotron">
    <form asp-action="editReservation">
        <div class="form-group">
            <label for="exampleInputEmail1">First name</label>
            <input class="form-control" asp-for="FirstName" type="text" placeholder="First name" value="@Model.FirstName">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">First name</label>
            <input class="form-control" asp-for="SecondName" type="text" placeholder="Landing location" value="@Model.SecondName">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Last name</label>
            <input class="form-control" asp-for="LastName" type="text" placeholder="Last Name" value="@Model.LastName">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">PIN</label>
            <input class="form-control" asp-for="EGN" type="text" placeholder="PIN" value="@Model.EGN">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Phone number</label>
            <input class="form-control" asp-for="PhoneNumber" type="text" placeholder="Phone number" value="@Model.PhoneNumber">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Nationality</label>
            <input class="form-control" asp-for="Nationality" type="text" placeholder="Nationality" value="@Model.Nationality">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">TypeOfTicket</label>
            <input class="form-control" asp-for="TypeOfTicket" type="text" placeholder="Take off time" value="@Model.TypeOfTicket">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Email</label>
            <input class="form-control" asp-for="Email" type="text" placeholder="Email" value="@Model.Email">
        </div>

        <div class="form-group">
            <input class="btn btn-primary btn-lg btn-block" type="submit" value="Edit">
        </div>
        <input asp-for="Id" type="hidden" value="@Model.Id" />
    </form>
</div>